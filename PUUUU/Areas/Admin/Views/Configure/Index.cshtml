@{
    ViewData["Title"] = "Bike Configuration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
        <!-- Your header content goes here -->
    </header>
    <main>
        <section class="configuration-section">
            <h1>Bike Configuration</h1>
            <table>
                <tr>
                    <th>Frame</th>
                    <th>Fork</th>
                    <th>Wheels</th>
                    <th>Saddle</th>
                    <th>Handle</th>
                    <th>Pedals</th>
                </tr>
                <tr>
                    <td>
                        <select>
                            <option value="type1">Mountain</option>
                            <option value="type2">Gravel</option>
                            <option value="type3">Road</option>
                            <option value="type4">Touring</option>
                        </select>
                    </td>
                    <td>
                        <select>
                            <option value="frame1">Frame 1</option>
                            <option value="frame2">Frame 2</option>
                            <option value="frame3">Frame 3</option>
                            <!-- Add more frame options here -->
                        </select>
                    </td>
                    <td>
                        <select>
                            <option value="fork1">Fork 1</option>
                            <option value="fork2">Fork 2</option>
                            <option value="fork3">Fork 3</option>
                            <!-- Add more fork options here -->
                        </select>
                    </td>
                    <td>
                        <select>
                            <option value="wheels1">Wheels 1</option>
                            <option value="wheels2">Wheels 2</option>
                            <option value="wheels3">Wheels 3</option>
                            <!-- Add more wheels options here -->
                        </select>
                    </td>
                    <td>
                        <select>
                            <option value="components1">Components 1</option>
                            <option value="components2">Components 2</option>
                            <option value="components3">Components 3</option>
                            <!-- Add more components options here -->
                        </select>
                    </td>
                </tr>
            </table>
        </section>
        <section class="summary-section">
            <h2>Configuration Summary</h2>
            <!-- Display the summary of the bike configuration here -->
        </section>
        <section class="result-section">
            <h2>Configuration Result</h2>
            <!-- Display the result of the bike configuration here -->
        </section>
    </main>
    <footer>
        <!-- Your footer content goes here -->
    </footer>
    <script src="~/js/scripts.js"></script>
</body>
</html>
