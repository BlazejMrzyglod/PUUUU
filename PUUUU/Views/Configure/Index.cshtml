@model PUUUU.Models.ViewModels.ConfigureViewModel
@{
    ViewData["Title"] = "Konfigurator roweru";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
        <!-- Your header content goes here -->
    </header>
    <main>
        <form asp-action="Index">
            <h1>Konfigurator roweru</h1>
            <table>
                <tr>
                    <th>Rama</th>
                    <th>Widelec</th>
                    <th>Koła</th>
                    <th>Siedzenie</th>
                    <th>Uchwyt</th>
                    <th>Pedały</th>
                </tr>
                <tr>
                    <td>
                        @Html.DropDownListFor(modelItem => Model.FrameId, Model.Frames, new {@class ="form-control"})
                    </td>
                    <td>
                        @Html.DropDownListFor(modelItem => Model.ForkId, Model.Forks, new {@class ="form-control"})
                    </td>
                    <td>
                        @Html.DropDownListFor(modelItem => Model.WheelsId, Model.Wheels, new {@class ="form-control"})
                    </td>
                    <td>
                        @Html.DropDownListFor(modelItem => Model.SaddleId, Model.Saddles, new {@class ="form-control"})
                    </td>
                    <td>
                        @Html.DropDownListFor(modelItem => Model.HandleId, Model.Handles, new {@class ="form-control"})
                    </td>
                    <td>
                        @Html.DropDownListFor(modelItem => Model.PedalsId, Model.Pedals, new {@class ="form-control"})
                    </td>
                </tr>
            </table>

            <input type="hidden" name="userName" value="@User.Identity.Name" />
            <label>Adres</label>
            <input name="address" />
            <label>Metoda dotawy</label>
            <input name="deliveryMethod" />
            <label>Metoda płatności</label>
            <input name="paymentMethod" />
            <div class="form-group">
                <input type="submit" value="Złóż zamówienie" class="btn btn-primary" />
            </div>
        </form>
       
    </main>
    <footer>
        <!-- Your footer content goes here -->
    </footer>
    <script src="~/js/scripts.js"></script>
</body>
</html>
