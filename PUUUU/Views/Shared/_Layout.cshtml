<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cyklo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PUUUU.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/photos/Logo.jpg" alt="Sample_Photo"/>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CYKLO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bikes" asp-action="Index">Oferta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Kontakt</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col">
                    <h4>firma</h4>
                    <ul>
                        <li><a href="Home/AboutUs">O nas</a></li>
                        <li><a href="Home/Service">Serwis</a></li>
                        <li><a href="Home/Contact">Kontakt</a></li>
                        <li><a href="Home/Privacy">Polityka prywatności</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Pomoc</h4>
                    <ul>
                        <li><a href="#">Wysyłka</a></li>
                        <li><a href="#">Zwroty</a></li>
                        <li><a href="#">Status zamówienia</a></li>
                        <li><a href="#">Opcje zapłaty</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Sklep</h4>
                    <ul>
                        <li><a href="Home/Configure">Konfigurator</a></li>
                        <li><a href="#">Sklep</a></li>
                        <li><a href="#">Akcesoria</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Media</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
